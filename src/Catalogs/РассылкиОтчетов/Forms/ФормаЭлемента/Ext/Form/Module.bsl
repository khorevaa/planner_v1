&НаКлиенте
Процедура СформироватьПредставлениеПолучателей()
	
	ПолучателиСтрокой = "";
	ПолучателиСтрокойИсключение = "";
	
	ПолучателиСтрокойРазделитель = "";
	ПолучателиСтрокойИсключениеРазделитель = "; " + НСтр("ru = 'Кроме'")+ " ";
	
	СтрокаДлинная = Ложь;
	СтрокаДлиннаяВывод = "";
	Для Каждого Элемент Из Объект.Получатели Цикл 
		Если Элемент.Исключен Тогда
			ПолучателиСтрокойИсключение = ПолучателиСтрокойИсключение + ПолучателиСтрокойИсключениеРазделитель + Элемент.Получатель;
			ПолучателиСтрокойИсключениеРазделитель = ", ";
		Иначе
			НоваяПолучателиСтрокой = ПолучателиСтрокой + ПолучателиСтрокойРазделитель + Элемент.Получатель;
			Если Не СтрокаДлинная И СтрДлина(НоваяПолучателиСтрокой + ПолучателиСтрокойИсключение) > 40 Тогда 
				СтрокаДлинная = Истина;
				Если СтрДлина(ПолучателиСтрокой) > 0 Тогда
					СтрокаДлиннаяВывод = ПолучателиСтрокой;
				Иначе
					СтрокаДлиннаяВывод = Лев(НоваяПолучателиСтрокой, 40) + "...";
				КонецЕсли;
			Иначе
				ПолучателиСтрокой = НоваяПолучателиСтрокой;
			КонецЕсли;
			ПолучателиСтрокой = НоваяПолучателиСтрокой;
			ПолучателиСтрокойРазделитель = ", ";
		КонецЕсли;
		
	КонецЦикла;
	Если СтрокаДлинная Тогда 
		Если  Объект.Получатели.Количество() > 1 Тогда
			Фильтр = новый Структура("Исключен", Ложь);
			КоличесивоПолучателей = Объект.Получатели.НайтиСтроки(Фильтр).Количество();
			Если КоличесивоПолучателей > 1 Тогда 
				СтрокаДополнение =  СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(НСтр("ru = 'и другие (всего %1 получателей)'"), КоличесивоПолучателей);
			Иначе
				СтрокаДополнение =  НСтр("ru = 'и другие'");
			КонецЕсли;
			Получатели = СтрокаДлиннаяВывод + " " + СтрокаДополнение;
		Иначе
			Получатели = СтрокаДлиннаяВывод;
		КонецЕсли;
	Иначе 
		Получатели = ПолучателиСтрокой + ПолучателиСтрокойИсключение;
	КонецЕсли;
	
	Элементы.ПолучателиРассылки.Подсказка = ПолучателиСтрокой + СтрЗаменить(ПолучателиСтрокойИсключение, ";", Символы.ПС);
	
	Если НЕ ЗначениеЗаполнено(Получатели) Тогда 
		Получатели = НСтр("ru = '<Укажите получателей>'");
	КонецЕсли;
	
КонецПроцедуры


